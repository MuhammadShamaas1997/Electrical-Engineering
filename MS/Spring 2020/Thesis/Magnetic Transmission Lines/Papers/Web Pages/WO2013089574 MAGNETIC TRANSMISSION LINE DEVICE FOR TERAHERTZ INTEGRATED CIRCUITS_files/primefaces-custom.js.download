/*	Sets the dialog position "center, center" but relative to the actual window's height and width.
 * 	The PF's default position is "center, center" considering the whole height and width PLUS the overflow (if it's present). 
 * 	With large contents (e.g resultlist with rows >= 50), the vertical position set is out of the user's view. 
 * 	Horizontal positioning have the same issue. This function corrects this behavior. 
 */
function centerDialog(dialogId) {
	var dialogStyle = document.getElementById(dialogId).style;
	var leftPosition = (window.innerWidth - document.getElementById(dialogId).clientWidth) / 2;
	var topPosition = (window.innerHeight - document.getElementById(dialogId).clientHeight) / 2;
//	console.log("Window (width:"+window.innerWidth+", height:"+window.innerHeight+")");
//	console.log("Dialog position (left:"+leftPosition+", top:"+topPosition+")");
	dialogStyle.left = leftPosition;
	dialogStyle.top = topPosition;
}

function fixPF(){
    document.dispatchEvent(new Event('WebComponentsPrimefacesFix'));
}
